<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ReserveActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb4"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBackBlue"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="병원 찾기"
            android:textSize="30dp"
            android:textColor="#FFFFFF"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/reserveHospitalName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:layout_below="@id/tb4"
        android:textSize="25sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/datePick2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="예약 날짜"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/reserveHospitalName2"/>

    <EditText
        android:id="@+id/dateEdit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Pick"
        android:clickable="true"
        android:editable="false"
        android:focusable="false"
        android:layout_margin="10dp"
        android:layout_below="@+id/datePick2"/>

    <TextView
        android:id="@+id/timePick2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="예약 시간"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dateEdit2"/>

    <EditText
        android:id="@+id/timeEdit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Pick"
        android:clickable="true"
        android:editable="false"
        android:focusable="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/timePick2"/>

    <Button
        android:id="@+id/button0900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackGray"
        android:text="09:00"
        android:textColor="@color/colorGray"
        android:clickable="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/timeEdit2"/>

    <Button
        android:id="@+id/button1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackGray"
        android:text="10:00"
        android:textColor="@color/colorGray"
        android:clickable="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/timeEdit2"
        android:layout_toRightOf="@+id/button0900"/>

    <Button
        android:id="@+id/button1100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackGray"
        android:text="11:00"
        android:textColor="@color/colorGray"
        android:clickable="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/timeEdit2"
        android:layout_toRightOf="@+id/button1000"/>

    <Button
        android:id="@+id/button1200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackGray"
        android:text="12:00"
        android:textColor="@color/colorGray"
        android:clickable="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/timeEdit2"
        android:layout_toRightOf="@+id/button1100"/>

    <Button
        android:id="@+id/button1300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackGray"
        android:text="13:00"
        android:textColor="@color/colorGray"
        android:clickable="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/button0900" />

    <Button
        android:id="@+id/button1400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackGray"
        android:text="14:00"
        android:textColor="@color/colorGray"
        android:clickable="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/button1000"
        android:layout_toRightOf="@id/button1300"/>

    <Button
        android:id="@+id/button1500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackGray"
        android:text="15:00"
        android:textColor="@color/colorGray"
        android:clickable="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/button1100"
        android:layout_toRightOf="@id/button1400"/>

    <Button
        android:id="@+id/button1600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackGray"
        android:text="16:00"
        android:textColor="@color/colorGray"
        android:clickable="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/button1200"
        android:layout_toRightOf="@id/button1500"/>

    <Button
        android:id="@+id/button1700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackGray"
        android:text="17:00"
        android:textColor="@color/colorGray"
        android:clickable="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/button1300" />

    <Button
        android:id="@+id/button1800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackGray"
        android:text="18:00"
        android:textColor="@color/colorGray"
        android:clickable="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/button1400"
        android:layout_toRightOf="@id/button1700"/>

    <TextView
        android:id="@+id/reserveWrite2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="예약 내용"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button1700"/>

    <EditText
        android:id="@+id/reserveText2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:layout_margin="10dp"
        android:layout_below="@+id/reserveWrite2"/>

    <Button
        android:id="@+id/reserveDoneButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="예약 완료"
        android:layout_margin="10dp"
        android:layout_below="@+id/reserveText2"/>




</RelativeLayout>