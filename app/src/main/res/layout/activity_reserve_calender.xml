<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.reserveCalenderActivity">

    <TextView
        android:id="@+id/reserveHospitalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/datePick"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="예약 날짜"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/reserveHospitalName"/>

    <EditText
        android:id="@+id/dateEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Pick"
        android:clickable="true"
        android:editable="false"
        android:focusable="false"
        android:layout_margin="10dp"
        android:layout_below="@+id/datePick"/>

    <TextView
        android:id="@+id/timePick"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="예약 시간"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dateEdit"/>

    <EditText
        android:id="@+id/timeEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Pick"
        android:clickable="true"
        android:editable="false"
        android:focusable="false"
        android:layout_margin="10dp"
        android:layout_below="@+id/timePick"/>

    <TextView
        android:id="@+id/reserveWrite"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="예약 내용"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/timeEdit"/>

    <EditText
        android:id="@+id/reserveText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:layout_margin="10dp"
        android:layout_below="@+id/reserveWrite"/>

    <Button
        android:id="@+id/reserveDoneButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="예약 완료"
        android:layout_margin="10dp"
        android:layout_below="@+id/reserveText"/>

    <Button
        android:id="@+id/lookupButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reserveHospitalName"
        android:layout_toRightOf="@+id/datePick"
        android:text="날짜 예약 조회" />

    <ListView
        android:id="@+id/timelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1px"
        android:divider="@color/colorBlack"
        android:layout_below="@+id/dayReserve"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/dayReserve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text=""
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/reserveDoneButton"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/lookupReserve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timelist"
        android:text=""
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"/>




</RelativeLayout>